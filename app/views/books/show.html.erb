
  	<div class="row">
  	  <div class="col-xs-3">
  	  	<h2>User info</h2>
        <div class="field">
  	  	 <%= attachment_image_tag @book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        </div>
  	  	<table class="table">
  	  	  <tbody>
  	  	  	<tr>
  	  	  	 <th>name</th>
  	  	  	 <th><%= @book.user.name %></th>
  	  	  	</tr>
  	  	  	 <tr>
  	  	  	 <th>introduction</th>
  	  	  	 <th><%= @book.user.introduction %></th>
  	  	  	</tr>
  	  	  </tbody>
  	  	</table>
  	  	<div class="row">
  	  	 <%= link_to  "", edit_user_path(@book.user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_4368" %>
  	  	</div>
  	  	<h2>New book</h2>
  	  	<%= form_for(@book_form) do |f| %>
  	  	<div class="field row">
  	  		<label for="
  	  		book_title">Title</label>
  	  	  <%= f.text_field :title, class:"col-xs-12 book_title" %>
  	  	</div>
  	  	<div class="field row">
  	  		<label for="
  	  		book_opinion">Opinion</label>
  	  	  <%= f.text_area :body, class:"col-xs-12 book_body" %>
  	  	</div>
  	  	<div class="actions row">
  	  	  <%= f.submit "Create", class:"btn btn-primary col-xs-12" %>
  	  	</div>
  	  	  <% end %>

  	  </div>
  	  <div class="col-xs-9" >
  	  	<h2>Book detail</h2>
  	  	<table class="table">
  	  		<tbody>
  	  			<tr>
  	  			<td>
  	  			<div class="field">
               <%= attachment_image_tag @book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size: "40x40" %>
               <p><%= link_to @book.user.name, user_path(@book.user.id)%></p>
           </div>
  	  		    </td>
  	  			<td>
  	  				<%= link_to @book.title, book_path(@book.id)%>
  	  			</td>
  	  			<td>
  	  				<%= @book.body %>
  	  			</td>
  	  			<% if @book.user.id == current_user.id %>
  	  			<td>
  	  				<%= link_to "Edit", edit_book_path(@book.id)%>
  	  			</td>
  	  			<td>
  	  				<%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか?"}
  	  			          %>
  	  			</td>
  	  			<%end%>
  	  			</tr>

  	  		</tbody>
  	  	</table>
        <%= form_for [@book, @book_comment] do |f| %>
        <div class="field row">
          <label for="
          book_opinion">Comment</label>
          <%= f.text_area :comment, class:"col-xs-12 book_comment" %>
        </div>
        <div class="actions row">
          <%= f.submit "Create", class:"btn btn-lg btn-base-1 mt-20 pull-right" %>
        </div>
          <% end %>
  	  </div>
  	</div>
